    script.
      $('#mealdrink').click(function() {
      $('#restprop').slideToggle('slow');
      if ($("#restprop").is(':visible')) {
      $("html, body").animate({scrollTop: $("#restprop").offset().top});
      }
      });
      $('#showmap').click(function() {
      $('#map').slideToggle('slow');
      var map = L.mapbox.map('mapitself', 'jesusjesus.ie7kb67o').setView([55.753,  37.622], 14);
      if ($("#map").is(':visible')) {
      $("html, body").animate({scrollTop: $("#map").offset().top});
      }
      });
