doctype html
html(lang='en')
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Top and views
    //
       Bootstrap 
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='https://api.tiles.mapbox.com/mapbox.js/v1.6.3/mapbox.css', rel='stylesheet')
    style
     :css
      @font-face {
      font-family:skinny;
      src: url('/bootstrap/fonts/CODElight.otf');
      }
      @font-face {
      font-family:this;
      src:url('/bootstrap/fonts/20 Attentica 4F UltraLight.ttf');
      }
      body {
      background-color:white;
      min-width:480px;
      }
      .container {
      width:100%;
      padding:0px;
      padding-top:0px;
      padding-bottom:1vw;
      margin:0px;
      }
      .row {
      margin:0px;
      padding:0px;
      }
      h5 {
      font-family:skinny;
      font-size:7vw;
      color:#333;
      padding:0px;
       }
       h1 {
      background-color:#669999;
      font-family:this;
      margin-top:auto;
      margin-bottom:1vw;
      font-size:14vw;
      color:white;
      font-weight:100;
      display:inline;
      }
      h2 {
      font-family:this;
      margin-top:1vw;
      margin-bottom:1vw;
      font-size:4vw;
      color:#333;
      font-weight:100;
      }
      .fivemargin {
      margin-right:5vw;
      margin-left:5vw;
      }
      .sixmargin {
      margin-left:6vw;
      margin-right:6vw;
      }
      .bb {
      border-bottom:0.3vw solid #ddd;
      background-color:white;
      }
      a:focus, a:hover{
      color:#c35403;
      outline:none;
      text-decoration: none;
      }
      body
    .container
      script(src='https://api.tiles.mapbox.com/mapbox.js/v1.6.3/mapbox.js')
      #header.row.bb.fivemargin
        a(href='/en/geo/#{city}')
          .col-xs-2
            span.glyphicon.glyphicon-chevron-left(style='color: #ddd; font-size: 5vw; margin: 1vw;')
          .col-xs-8(style='text-align: center;')
            h5(style='Display: inline;') New
      #items.row.sixmargin
        .col-xs-12(style='text-align:center')
          h2 #{pnumber} during last 3 months
      #newblock.row.sixmargin
        .col-xs-12
          each imgpreview, i in news
           a(href='#{imgpreview.ppredir}')
            .row.preview.fivemargin
              .name
                  h1 #{imgpreview.nameen}
              .col-xs-12
                  img(src='#{imgpreview.mainpreview}')      