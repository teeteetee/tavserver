    style
     :css
      @font-face {
      font-family:code;
      src: url('bootstrap/fonts/CODElight.otf');
      }
      body {
      min-width:480px;
      }
      h5 {
      font-family:code;
      font-size:8vw;
      color:#333;
      padding:0px;
      }
      h2 {
      font-family:code;
      font-size:3vw;
      color:gray;
      }
      a {
      color:white;
      }
      a:focus, a:hover{
      outline:none;
      text-decoration: none;
      }
      .container {
      width:100%;
      height:100%;
      padding:60px;
      padding-top:60px;
      text-align:center;
      }
      #header {
      background-color:#336666;
      border-bottom:1px solid white;
      }
      img {
      width:100%;
      height:100%;
      }
      .city {
      border-top:1px solid #333;
      }
      #moscow:hover {
      background-color:#ccccff;
      }
      #london:hover {
      background-color:#ccff99;
      }
      #newyork:hover {
      background-color:#cccc99;
      }
      #mexico:hover {
      background-color:#ccffcc;
      }
      #losangeles:hover {
      background-color:#ffccff;
      }
  body
    .container
      #moscow.row
        .col-xs-12
