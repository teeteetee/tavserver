doctype html
html(lang='en')
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Bootstrap 101 Template
    style
     :css
      @font-face {
      font-family:this;
      src:url('/bootstrap/fonts/20 Attentica 4F UltraLight.ttf');
      }
      .blue {
      background-color:#2b4140;
      height:50vh;
      width:100%
      }
      .orange {
      background-color:#c35204;
      height:50vh;
      width:100%
      }
      #curtain {
      position:absolute;
      display:none;
      height:100%;
      width:100%;
      z-index:7;
      }
      #upper{
      border-bottom:2vh solid #ddd;
      }
      #lower{
      border-top:2vh solid #ddd;
      }
  body
    #curtain.row
      a(href='http://m.topandviews.ru')
        #upper.row.blue
          h4(style='margin-top: 3vh; font-family: this; font-size: 15vh; color: #ddd;') Мобильная
      a(href='http://www.topandviews.ru')
        #lower.row.orange
          h4(style='margin-top: 3vh; font-family: this; font-size: 15vh; color: #ddd;') Полная
    //
       jQuery (necessary for Bootstrap's JavaScript plugins) 
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    //
       Include all compiled plugins (below), or include individual files as needed 
    script(src='/js/bootstrap.min.js')
    script.
      if (screen.width < 768) { $('#curtain').slideToggle("fast"); }
      else {window.location='http://www.topandviews.ru'}
