doctype html
html(lang='en')
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Top and views
    //
       Bootstrap 
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    style
      @font-face {
      font-family:skinny;
      src: url('/bootstrap/fonts/CODElight.otf');
      }
      @font-face {
      font-family:this;
      src:url('/bootstrap/fonts/20 Attentica 4F UltraLight.ttf');
      }
      body {
      background-color:white;
      min-width:480px;
      }
      .container {
      width:100%;
      padding:5vw;
      padding-top:0px;
      padding-bottom:1vw;
      margin:0px;
      }
      .row {
      margin:0px;
      padding:0px;
      }
      h1 {
      font-family:skinny;
      font-size:11vw;
      color:#333;
      padding:0px;
      text-shadow: 0px 0px 2px rgba(150, 150, 150, 1);
      }
      h5 {
      font-family:skinny;
      font-size:7vw;
      color:#333;
      padding:0px;
      }
      h3 {
      font-family:this;
      font-size:7vw;
      color:#333;
      padding:0px;
      }
      h2 {
      font-family:this;
      margin-top:1vw;
      margin-bottom:1vw;
      font-size:4vw;
      color:#333;
      font-weight:100;
      }
      h4{
      font-size:2.8vw;
      font-family:this;
      }
      .center {
      text-align:center;
      }
      img {
      width:100%;
      height:100%;
      }
      span {
      margin-right:100px;
      }
      a {
      color:white;
      }
      a:focus, a:hover{
      color:#c35403;
      outline:none;
      text-decoration: none;
      }
      .cityselect {
      border-radius:0px;
      height:70px;
      }
      li {
      font-family:this;
      color:#ddd;
      font-size:4vw;
      height:4vw;
      }
      li a {
      color:#333;
      }
      ul {
      list-style-type:none;
      padding:0px;
      }
      .col-xs-3 {
      padding-right:1vw;
      padding-left:1vw;
      }
      .col-xs-2 {
      padding:0px;
      }
      .col-lg-4 {
      padding:0px;
      }
      .col-lg-8 {
      padding:0px;
      }
      .colorchange {
      background-color:white;
      }
      #places:hover h5 {
      color:#333;
      }
      #separator {
      padding:15px;
      }
      #footer {
      background-color:white;
      }
      #footerlinks{
      font-size:1vw;
      background-color:white;
      border-top:4px solid #ddd;
      border-bottom:4px solid #ddd;
      }
      #map {
      background-color:gray;
      }
      #showmap {
      background-color: white;
      cursor:pointer;
      }
      #showmap:hover {
      background-color:#ccccff;
      }
      #places:hover {
      background-color:#ccccff;
      }
      #property:hover {
      background-color:#ccccff;
      }
      #campuses:hover{
      background-color:#ccccff;
      }
      #property:hover h5{
      color:#333;
      }
      #yachtsjets:hover {
      background-color:#ccccff;
      }
      #yourcity:hover {
      background-color:#ccccff;
      }
      #yachtsjets:hover h5{
      color:#333;
      }
      #partners {
      border-right:4px solid #ddd;
      }
      #hr {
      border-right:4px solid #ddd;
      }
      #partners:hover{
      background-color:#e1b6bc;
      }
      #contact:hover{
      background-color:#a4cab1;
      }
      #hr:hover{
      background-color:#a5aac5;
      }
      #campuses:hover h5{
      color:#333;
      }
      #yourcity {
      cursor:pointer;
      }
      #yourcity:hover h5 {
      color:#333;
      }
      #topdivider {
      border-bottom:4px solid #ddd;
      }
      .bb {
      border-bottom:4px solid #ddd;
      background-color:white;
      }
      #logotextsmall {
      text-align:center;
      }
  body
    //
       jQuery (necessary for Bootstrap's JavaScript plugins) 
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    //
       Include all compiled plugins (below), or include individual files as needed 
    script(src='js/bootstrap.min.js')
    .container
     
      #yourcity.row.bb
        .col-xs-10
          a(href='/geo')
            h5(style='margin-top: 3vw;') Your city
        .col-xs-2
          a(href='/geo')
            span.glyphicon.glyphicon-chevron-right(style='color: #ff6600; font-size: 5vw; margin: 3vw;')
      #places.row.bb
        .col-xs-10
          a(href='/places')
            h5(style='margin-top: 3vw;') Places
        .col-xs-2
          a(href='/places')
            span.glyphicon.glyphicon-chevron-right(style='color: #2b4140; font-size: 5vw; margin: 3vw;')
      #property.row.bb
        .col-xs-10
          a(href='/propertyhotels')
            h5(style='margin-top: 3vw;') Property  & Hotels
        .col-xs-2
          a(href='/propertyhotels')
            span.glyphicon.glyphicon-chevron-right(style='color: #2b4140; font-size: 5vw; margin: 3vw;')
      #yachtsjets.row.bb
        .col-xs-10
          a(href='/yachtsjets')
            h5(style='margin-top: 3vw;') Yachts & Jets * 
        .col-xs-2
          a(href='/yachtsjets')
            span.glyphicon.glyphicon-chevron-right(style='color: #2b4140; font-size: 5vw; margin: 3vw;')
      #campuses.row.bb
        .col-xs-10
          a(href='/campuses')
            h5(style='margin-top: 3vw;') Campuses *
        .col-xs-2
          a(href='/campuses')
            span.glyphicon.glyphicon-chevron-right(style='color: #2b4140; font-size: 5vw; margin: 3vw;')
      
      #showmap.row
        
        .col-xs-10
          h5(style='margin-top: 3vw;') On map
        .col-xs-2
          span.glyphicon.glyphicon-chevron-right(style='color: #2b4140; font-size: 5vw; margin: 3vw;')
      #map.row(style='display: none;')
        .col-xs-12(style='height: 45vw; padding: 0px;')
          .row
            .col-xs-4(style='height: 5vw; background-color: gray; border-right: 1px solid #333;') Place
            .col-xs-4(style='height: 5vw; background-color: gray; border-right: 1px solid #333;') Property
            .col-xs-4(style='height: 5vw; background-color: gray;') Campus
          .row
            .col-xs-12(style='margin: 0px; padding: 0px; height: 40vw;')
              iframe(width='100%', height='100%', frameborder='0', style='border: 0px;', src='https://www.google.com/maps/embed/v1/place?key=AIzaSyAa4_KxPoDbPYcrtj3lHCEmt_-lUbKGSyI&q=Moscow')
     
      #footerlinks.row
        #partners.col-xs-4
          a(style='display: block; color: #333; font-family: this; font-size: 3vw;', href='/partnership') Partners
        #hr.col-xs-4
          a(style='display: block; color: #333; font-family: this; font-size: 3vw;', href='/job')
            | job
        #contact.col-xs-4
          a(style='display: block; color: #333; font-family: this; font-size: 3vw;', href='/contact') Contact
      #footer.row
        .col-xs-12(style='font-family: skinny; padding: 5px; text-align: center;')
          a(style='color: #333;', href='/')
            h4(style='font-family: this; font-weight: lighter;') Top and views.
      script.
        $('#showmap').click(function() {
        $('#map').slideToggle('slow');
        if ($("#map").is(':visible')) {
        $("html, body").animate({scrollTop: $("#map").offset().top});
        }
        });
