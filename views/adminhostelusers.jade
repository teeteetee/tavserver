html
html(lang='en')
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Admin:HOSTEL USERS
    //
       Bootstrap 
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    
    style
     :css
      @font-face {
      font-family:attentica;
      src:url('/bootstrap/fonts/Attentica.ttf');
      }
      .container{
      background-color:#eee;
      }
      #header {
      text-align:left;
      background-color:#ddd;
      cursor:pointer;
      }
      .order {
      border-bottom:1px solid #ddd;
      text-align:center;
      }
      .field {
      border-right:1px solid #ddd;
      }
      #legend{
      border-bottom:1px solid #ddd;
      background-color:white;
      }
      .cap {
      text-align:center;
      }
      h5 {
      font-size:1vw;
      font-family:arial;
      letter-spacing:0.3vw;
      text-transform:uppercase;
      color:black;
      }
      h1 {
      font-size:4vw;
      font-family:attentica;
      display:inline;
      }
      input{
      font-family:arial;
      letter-spacing:1px;
      font-size:1.5vw;
      }
  body
    .container
      script.
        function away() {
         window.location='http://topandviews.ru/admin';
        }
      #header.row(style='background-color:#333;',onclick='away()')
        .col-xs-12
          h1(style='color:#eee;')  Top 
            span(style='color:#ff9900;') &
          h1(style='color:#eee;')  Views 
            span(style='color:#c35') Admin : 
            span(style='color:#e18282') Hostelusers 
      #drop.row
        form(method='post' action='/drop/hostelusers' role='form' )
        .col-xs-4
          h5 Drop Users DB
        .col-xs-4
          input(type='text',style='margin:1vh;',name='p')
        .col-xs-4
          button(style='border:1px solid #c35;border-radius:4px;margin:1vh;',type='submit')
            h5(style='color:#c35;') Drop 
      #results.row
        .col-xs-12
          #legend.row
            .col-xs-3.field.cap
              h5 MAIL
            .col-xs-2.field.cap
              h5 HOSTELID
            .col-xs-2.field.cap
              h5 CONTACT NAME
            .col-xs-2.field.cap
              h5 CONTACT PHONE
            .col-xs-2.field.cap
              h5 REGDATE
            
                         
          each user , i in docs
            .row.order
              .col-xs-3.field
                h5 #{user.mail}
              .col-xs-2.field
                h5 #{user.hostelid}
              .col-xs-2.field
                h5 #{user.contact.name}
              .col-xs-2.field
                h5 #{user.contact.phone}
              .col-xs-2.field
                h5 #{user.regdate}
              
                
              
              


        
