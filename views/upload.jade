    style
     :css
      @font-face {
      font-family:code;
      src: url('/bootstrap/fonts/CODElight.otf');
      }
      body {
      background-color:#102f3a;
      min-width:480px;
      }
      h5 {
      font-family:code;
      font-size:8vw;
      padding:0px;
      }
      h2 {
      font-family:code;
      font-size:3vw;
      color:gray;
      }
      a {
      color:#333;
      }
      .row {
      padding:0px;
      margin:0px;
      }
      a:focus, a:hover{
      outline:none;
      text-decoration: none;
      }
      .container {
      width:100%;
      height:100%;
      padding:0px;
      padding-top:0px;
      padding-bottom:5px;
      }
      label {
      color: #ddd;
      }
      .col-xs-8 {
      padding-top:20px;
      }
