                  input#4side.from-control(type='file', name='4side')
                .form-group
                  label(for='5side')  5 side
                  input#5side.from-control(type='file', name='5side')
                .form-group
                  label(for='6side')  6 side
                  input#6side.from-control(type='file', name='6side')
                .form-group
                  label(for='mainpreview')  Mainpreview
                  input#mainpreview.from-control(type='file', name='mainpreview')
                .form-group
                  label(for='xml')  Xml
                  input#xml.from-control(type='file', name='xml')
