    style
     :css
      @font-face {
      font-family:code;
      src: url('/bootstrap/fonts/CODElight.otf');
      }
      body {
      background-color:gray;
      min-width:480px;
      }
      h5 {
      font-family:code;
      font-size:8vw;
      padding:0px;
      }
      h2 {
      font-size:5vw;
      color:white;
      }
      a {
      color:#333;
      }
      a:focus, a:hover{
      outline:none;
      text-decoration: none;
      }
      .container {
      width:100%;
      height:100%;
      padding:0px;
      padding-top:0px;
      padding-bottom:5px;
      }
      #header {
      background-color:#333;
      border-bottom:1px solid white;
      text-align:center;
      }
      .row {
      margin:0px;
      padding:0px;
      }
      .btn-lg {
      color:white
      background-color:#c35
      border-radius:0px
      }
  body
    .container
      #header.row
        .col-xs-12
          h5(style='color: white;')  Admin 
      #search.row
        .col-xs-12(style='padding-top: 17vw;')
          form(role='form', action='/adminsearch', method='post', name='search')
            .form-group
              input.form-control(type='text',name='adminsearch', style='max-width: 70vw;border-radius:0px; margin-left: auto; margin-right: auto;')
      #clear.row
        .col-xs-4.col-xs-offset-4(style='text-align:center')
          form(method='post',action='/admin/clear',role='form)
           input.form-control(type='text',id='token',name='token')
           button.btn-lg(type='submit') CLEAR        
      #message.row
        .col-xs-12
           #{message}
