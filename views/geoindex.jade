doctype html
html(lang='en')
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Top and views
    //
       Bootstrap 
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    style
     :css
      @font-face {
      font-family:skinny;
      src: url('/bootstrap/fonts/CODElight.otf');
      }
      @font-face {
      font-family:this;
      src:url('/bootstrap/fonts/20 Attentica 4F UltraLight.ttf');
      }
      body {
      background-color:white;
      min-width:480px;
      }
      .container {
      width:100%;
      padding-top:0px;
      padding:5vw;
      padding-bottom:1vw;
      margin:0px;
      }
      .row {
      margin:0px;
      padding:0px;
      }
      h5 {
      font-family:skinny;
      font-size:7vw;
      color:#333;
      padding:0px;
      }
      h2 {
      font-family:this;
      margin-top:1vw;
      margin-bottom:1vw;
      font-size:4vw;
      color:#333;
      font-weight:100;
      }
      h4{
      font-size:2.8vw;
      font-family:this;
      }
      .center {
      text-align:center;
      }
      img {
      width:100%;
      height:100%;
      }
      span {
      margin-right:100px;
      }
      a {
      color:white;
      }
      a:focus, a:hover{
      color:#c35403;
      outline:none;
      text-decoration: none;
      }
      li {
      font-family:this;
      color:gray;
      font-size:4vw;
      height:4vw;
      }
      li a {
      color:#333;
      }
      ul {
      list-style-type:none;
      padding:0px;
      }
      .col-xs-3 {
      padding-right:1vw;
      padding-left:1vw;
      }
      .col-xs-2 {
      padding:0px;
      }
      .col-lg-4 {
      padding:0px;
      }
      .col-lg-8 {
      padding:0px;
      }
      .colorchange {
      background-color:white;
      }
      #places {
      border-top:1px solid #333;
      border-bottom:1px solid #333;
      }
      #places:hover {
      background-color:#80aba9;
      }
      #places:hover h5 {
      color:#333;
      }
      #separator {
      padding:15px;
      }
      #footer {
      background-color:white;
      }
      #footerlinks{
      font-size:1vw;
      background-color:white;
      border-top:1px solid #333;
      border-bottom:1px solid #333;
      }
      #map {
      background-color:gray;
      }
      #showmap {
      background-color: #2b4140;
      }
      #property {
      border-bottom:1px solid #333;
      }
      #property:hover {
      background-color:#80aba9;
      }
      #property:hover h5{
      color:#333;
      }
      #yachtsjets {
      border-bottom:1px solid #333;
      }
      #yachtsjets:hover {
      background-color:#80aba9;
      }
      #yachtsjets:hover h5{
      color:#333;
      }
      #partners {
      border-right:1px solid #333;
      }
      #hr {
      border-right:1px solid #333;
      }
      #partners:hover{
      background-color:#e1b6bc;
      }
      #contact:hover{
      background-color:#a4cab1;
      }
      #hr:hover{
      background-color:#a5aac5;
      }
      #campuses {
      border-bottom:1px solid #333;
      }
      #campuses:hover{
      background-color:#80aba9;
      }
      #campuses:hover h5{
      color:#333;
      }
      #location {
      border-top:1px solid #333;
      border-bottom:1px solid #333;
      background-color: #2b4140;
      margin-bottom:3vw;
      }
      #tophead {
      background-color:#ffcc66;
      border-bottom:1px solid white;
      cursor:pointer;
      }
      #topbody {
      background-color:#ffcc66;
      display:none;
      }
      #topbody h2 {
      margin-bottom:0px;
      border-bottom:3px solid white;
      }
      #newhead {
      background-color:#99ff99;
      border-bottom:1px solid white;
      cursor:pointer;
      }
      #newbody {
      background-color:#99ff99;
      display:none;
      }
  body
    //
       jQuery (necessary for Bootstrap's JavaScript plugins) 
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    //
       Include all compiled plugins (below), or include individual files as needed 
    script(src='/js/bootstrap.min.js')
    .container
      #location.row
        .col-xs-12(style='text-align: center;')
          a(href='/geo')
            h5(style='font-size: 10vw; font-family: skinny; color: white; margin-bottom: 0px;') #{city}
      #tophead.row
        .col-xs-10
          h5(style='margin-bottom: 0px;') Top
        .col-xs-2
          span.glyphicon.glyphicon-chevron-down(style='color: white; font-size: 5vw; margin: 2vw;')
      #topbody.row
        .col-xs-3
          h2 Absolute
          ul
            each place, i in first
              li
                a(href='#{place.ppredir}') #{place.nameen}
        .col-xs-3
          h2 Rooftop
          ul
            each secondplace, i in second
             li
               a(href='#{secondplace.ppredir}') #{secondplace.nameen}
        .col-xs-3
          h2 Terrace
          ul
            each thirdplace, i in third
             li
               a(href='#{thirdplace.ppredir}') #{thirdplace.nameen}
        .col-xs-3
          h2 Cuisine
          ul
            each fourthplace, i in fourth
             li
               a(href='#{fourthplace.ppredir}') #{fourthplace.nameen}
      #separatorone.row
        .col-xs-4.col-xs-offset-4(style='height: 2vw;')
      #newhead.row
        .col-xs-10
          h5(style='margin-bottom: 0px;') New
        .col-xs-2
          span.glyphicon.glyphicon-chevron-down(style='color: white; font-size: 5vw; margin: 2vw;')
      #newbody.row
        .col-xs-12
          .row(style='height: 230px;')
          .row(style='height: 230px;')
          .row(style='height: 20px;')
      #separatorone.row
        .col-xs-4.col-xs-offset-4(style='height: 2vw;')
      #places.row
        .col-xs-10
          a(href='/places/#{city}')
            h5(style='margin-top: 3vw;') Places
        .col-xs-2
          a(href='/places/#{city}')
            span.glyphicon.glyphicon-chevron-right(style='color: #2b4140; font-size: 5vw; margin: 3vw;')
      #property.row
        .col-xs-10
          a(href='/property/#{city}')
            h5(style='margin-top: 3vw;') Property  & Hotels
        .col-xs-2
          a(href='/property/#{city}')
            span.glyphicon.glyphicon-chevron-right(style='color: #2b4140; font-size: 5vw; margin: 3vw;')  
      #yachtsjets.row
        .col-xs-10
          a(href='/yachtsjets')
            h5(style='margin-top: 3vw;') Yachts & Jets * 
        .col-xs-2
          a(href='/yachtsjets')
            span.glyphicon.glyphicon-chevron-right(style='color: #2b4140; font-size: 5vw; margin: 3vw;')
      #campuses.row
        .col-xs-10
          a(href='/campuses')
            h5(style='margin-top: 3vw;') Campuses *
        .col-xs-2
          a(href='/campuses')
            span.glyphicon.glyphicon-chevron-right(style='color: #2b4140; font-size: 5vw; margin: 3vw;')
      #separatorone.row
        .col-xs-4.col-xs-offset-4(style='height: 30px;')
      #showmap.row(style='border-bottom: 1px solid #333; border-top: 1px solid #333; cursor: pointer;')
        .col-xs-2
        .col-xs-8(style='text-align: center;')
          h5(style='color: #ddd;')  Map 
        .col-xs-2
          span.glyphicon.glyphicon-chevron-down(style='color: white; font-size: 5vw; margin: 2vw;')
      #map.row(style='display: none;')
        .col-xs-12(style='height: 45vw; padding: 0px;')
          iframe(width='100%', height='100%', frameborder='0', style='border: 0px;', src='https://www.google.com/maps/embed/v1/place?key=AIzaSyAa4_KxPoDbPYcrtj3lHCEmt_-lUbKGSyI&q=#{city}')
      #maplinebottom.row
        .col-xs-12(style='margin-top: 20px;')
      #footerlinks.row
        #partners.col-xs-4
          a(style='display: block; color: #333; font-family: this; font-size: 3vw;', href='/partners') Partners
        #hr.col-xs-4
          a(style='display: block; color: #333; font-family: this; font-size: 3vw;', href='/job')
            | job
        #contact.col-xs-4
          a(style='display: block; color: #333; font-family: this; font-size: 3vw;', href='/contact') Contact
      #footer.row
        .col-xs-12(style='font-family: skinny; padding: 5px; text-align: center;')
          a(style='color: #333;', href='/')
            h4(style='font-family: this; font-weight: lighter;') Top and views.
      script.
        $('#tophead').click(function() {
        $('#topbody').slideToggle('slow');
        });
        $('#newhead').click(function() {
        $('#newbody').slideToggle('slow');
        });
        $('#showmap').click(function() {
        $('#map').slideToggle('slow');
        if ($("#map").is(':visible')) {
        $("html, body").animate({scrollTop: $("#map").offset().top});
        }
        });
