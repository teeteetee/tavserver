doctype html(lang='en')
head
    meta(charset='utf-8')
    |     
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    |     
    meta(name='viewport', content='width=device-width, initial-scale=1')
    |     
    title #{hostel.nameen}
    // Bootstrap
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')   
    style.
      body {
      width:1024px;
      height:768px;
      z-index:0;
      text-align:center;
      }
      @font-face {
      font-family:roboto-thin;
      src:url('/bootstrap/fonts/Roboto-Thin.ttf');
      }
      @font-face {
      font-family:attentica;
      src:url('/bootstrap/fonts/Attentica.ttf');
      }
      @font-face {
      font-family:br;
      src:url('/bootstrap/fonts/bebasneue_regular.ttf');
      }
      .container{
      padding:0px;
      width:100vw;
      }
      .row{
      padding:0px;
      margin:0px;
      width:100%;
      }
      .col-xs-12 {
      margin:0px;
      padding:0px;
      }
      #header {
      text-align:center;
      }
      h2 {
      font-family:roboto-thin;
      font-size:4vw;
      color:#333;
      border:2px solid #333;
      letter-spacing:1px;
      background-color:#333;
      }
      h1 {
      font-family:attentica;
      font-size:4vw;
      display:inline;
      color:black;
      }
      h6 {
      font-family:br;
      letter-spacing:2px;
      font-size:2vw;
      margin-top:0px;
      color:#333;
      }
      #info {
      position:fixed;
      opacity:0.5;
      text-align:center;
      top:45vh;
      left:0px;
      z-index:1001;
      }
      #info:hover {
      opacity:1;
      }
      #infoblock {
      position:fixed;
      z-index:2000;
      display:none;
      }
      #shadow {
      opacity:0.5;
      height:10px;
      background-color:black;
      }
      #pano {
      height:768px;
      width:100vw;
      background-color:#c35;
      }
      #header {
      background-color:white;
      text-align:left;
      }
      #infotext {
      text-align:left;
      background-color:white;
      }
      #book {
      text-align:center;
      background-color:white;
      padding-bottom:3vh;
      z-index:3000;
      }
      .form-control {
      height:100%;
      }
      #bookbutton:hover {
      background-color:#005713;
      }
      .br {
      border-right:1px solid #ddd;
      }  
